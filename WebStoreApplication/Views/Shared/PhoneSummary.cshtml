@model Phone

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="img-thumbnail">
            <p><img src="@Model.ImageUrl" alt="" width="100" height="100" /></p>
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3>
                    <a>@Model.Name</a>
                </h3>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
